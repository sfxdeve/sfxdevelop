---
import { cn } from "../../lib/utils";

interface Props {
    href: string;
    isExternal?: boolean;
    variant?: "solid" | "outline" | "ghost";
}

const { href, isExternal, variant } = Astro.props;
---

<a
    href={href}
    target={isExternal ? "_blank" : undefined}
    rel={isExternal ? "noreferrer" : undefined}
    class={cn(
        "border-4 py-2 px-5 flex items-center justify-center font-bold uppercase tracking-widest text-xs transition duration-300 ease-out",
        variant === "solid" &&
            "border-acid-300 text-ink-950 bg-acid-300 hover:text-ink-950 hover:bg-paper-50",
        variant === "outline" &&
            "border-paper-50 text-paper-50 bg-transparent hover:text-ink-950 hover:bg-paper-50",
        variant === "ghost" &&
            "border-transparent text-paper-50 bg-transparent hover:text-paper-50 hover:bg-ink-800",
    )}
>
    <slot />
</a>
